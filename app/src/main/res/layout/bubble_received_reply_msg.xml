<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_chat_date_separator"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="d MMMM yyyy"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_received_text_msg_bubble"
        android:backgroundTint="@color/msg_bubble_received"
        android:gravity="center"
        android:maxWidth="350dp"
        android:minWidth="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/replyToTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_reply_text_sent"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:lineHeight="15dp"
            android:maxWidth="320dp"
            android:maxLines="3"
            android:minWidth="128dp"
            android:padding="8dp"
            android:text="Rahul Raj\nSed ut perspiciatis Sed ut Sed ut perspiciatis Sed ut Sed ut perspiciatis Sed ut"
            android:textColor="@color/msg_txt_received"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:maxWidth="320dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="Sed ut perspiciatis Sed ut Sed ut perspiciatis Sed ut Sed ut perspiciatis Sed utSed ut perspiciatis Sed ut Sed ut perspiciatis Sed ut Sed ut perspiciatis Sed utSed ut perspiciatis Sed ut Sed ut perspiciatis Sed ut Sed ut perspiciatis Sed ut"
            android:textColor="@color/msg_txt_received" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="end"
            android:maxWidth="350dp"
            android:text="12:33 PM"
            android:textColor="@color/msg_txt_received"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>

    <!--
    change width of "replyToTxt" accordingly
    1 > 2 : (WC)
    1 <= 2 : (MP)
    -->